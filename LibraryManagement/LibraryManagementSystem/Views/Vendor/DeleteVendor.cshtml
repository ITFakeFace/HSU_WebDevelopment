@model LibraryManagementSystem.Models.Vendor

@{
    ViewData["Title"] = "DeleteAuthor";
}
<link rel="stylesheet" href="~/features/Vendor/list/Vendor.css" />

<div class="container"><br />
<h3>Bạn có chắc muốn xóa nhà cung cấp @Html.DisplayFor(modelItem => modelItem.Name)</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <span>Đang hoạt động</span>
            }
            else if (Model.Status == 0)
            {
                <span>Ngừng hoạt động</span>
            }
            else
            {
                <span>Không rõ</span>
            }
        </dd>
    </dl>
    @if (ViewBag.ErrorMessage != null)
{
            <!-- Thông báo  -->
            <div class="tab-content" id="errorTabContent">
                <div class="tab-pane fade show active" id="errorContent" role="tabpanel" aria-labelledby="error-tab">
                    <div class="alert alert-danger mt-3">
                        @ViewBag.ErrorMessage
                        @if (Model.Books != null && Model.Books.Any())
                        {
                            <ul style="padding-left: 0;">
                                @foreach (var book in Model.Books)
                                {
                                    <li style="list-style-type: none; padding-left: 20px;">- &nbsp;<a href="@Url.Action("Detail", "Book", new { id = book.Id })" class="custom-link">@book.Name</a></li>
                                }
                            </ul>
                        }
                        @if (Model.Status != 0)
                        {
                            <div>Sẽ chuyển đổi trạng thái thành "Ngừng hoạt động" nếu xác nhận.</div>
                        }
                    </div>
                </div>
            </div>
}
    <br />
    @if (!(Model.Status == 0 && Model.Books != null && Model.Books.Any()))
    {
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xác nhận" class="btn btn-danger" style="font-size: 14px; padding: 10px 20px;" /> 
    </form>
    }
    <div>
        <hr />
        <a class="btn-primary btn" style="font-size: 14px; padding: 10px 20px;" href="javascript:history.back()">Quay lại trang trước</a> &nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-primary" style="font-size: 14px; padding: 10px 20px;">Quay về trang chủ</a>
    </div>
</div>
</div>
