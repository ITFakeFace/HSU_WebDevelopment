    <script>
        $(document).ready(function () {
            // Hiển thị dropdown khi hover vào trigger
            $('.navbar-user-info').mouseenter(function () {
                $('.navbar-user-dropdown-container').stop().fadeIn(100); // Hiển thị với hiệu ứng mượt
            });

            // Ẩn dropdown khi chuột rời khỏi cả trigger và dropdown
            $('.navbar-user-info, .navbar-user-dropdown-container').mouseleave(function () {
                // Sử dụng `stop()` để tránh hiệu ứng bị giật
                $('.navbar-user-dropdown-container').stop().fadeOut(100);
            });

            // Đảm bảo dropdown không ẩn khi chuột ở trong chính nó
            $('.navbar-user-dropdown-container').mouseenter(function () {
                $(this).stop().fadeIn();
            });

            // Hiển thị dropdown khi hover vào trigger
            $('.navbar-link-book').mouseenter(function () {
                $('.navbar-submenu-book-container').stop().fadeIn(250); // Hiển thị với hiệu ứng mượt
            });

            // Ẩn dropdown khi chuột rời khỏi cả trigger và dropdown
            $('.navbar-link-book, .navbar-submenu-book-container').mouseleave(function () {
                // Sử dụng `stop()` để tránh hiệu ứng bị giật
                $('.navbar-submenu-book-container').stop().fadeOut(250);
            });

            // Đảm bảo dropdown không ẩn khi chuột ở trong chính nó
            $('.navbar-submenu-book-container').mouseenter(function () {
                $(this).stop().fadeIn();
            });
        });
    </script>
