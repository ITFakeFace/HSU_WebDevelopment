<!--=============== LOGIN ===============-->
<div class="login container grid" id="loginAccessRegister">
    

    <!--===== LOGIN REGISTER =====-->
    <div class="login__access">
        <h1 class="login__title">Tạo tài khoản.</h1>

        <div class="login__area">
            <form asp-action="Register" asp-controller="Account" method="post" class="login__form">
                <div class="login__content grid">
                    <div class="login__group grid">
                        <div class="login__box">
                            <input type="text" asp-for="PId" id="pid" required placeholder="" pattern="[0-9]{12}" class="login__input" required>
                            <label for="pid" class="login__label">Căn cước công dân</label>

                            <i class="ri-id-card-fill login__icon"></i>
                        </div>

                        <div class="login__box">
                            <input type="text" asp-for="Phone" id="phone" placeholder="" pattern="[0-9]{10}" class="login__input" required>
                            <label for="phone" class="login__label">Số điện thoại</label>

                            <i class="ri-id-card-fill login__icon"></i>
                        </div>
                    </div>

                    <div class="login__box">
                        <input type="text" asp-for="UserName" id="usernameCreate" required placeholder="" class="login__input" required>
                        <label for="usernameCreate" class="login__label">Tên tài khoản</label>

                        <i class="ri-mail-fill login__icon"></i>
                    </div>

                    <div class="login__box">
                        <input type="email" asp-for="Email" id="emailCreate" required placeholder="" class="login__input" required>
                        <label for="emailCreate" class="login__label">Email</label>

                        <i class="ri-mail-fill login__icon"></i>
                    </div>

                    <div class="login__box">
                        <input type="password"asp-for="Password" id="passwordCreate" required placeholder="" class="login__input" required>
                        <label for="passwordCreate" class="login__label">Mật khảu</label>

                        <i class="ri-eye-off-fill login__icon login__password" id="loginPasswordCreate"></i>
                    </div>

                    <div class="login__box">
                        <input type="password" asp-for="ConfirmPassword" id="confirmPasswordCreate" required placeholder="" class="login__input" required>
                        <label for="confirmPasswordCreate" class="login__label">Xác nhận mật khảu</label>

                        <i class="ri-eye-off-fill login__icon login__password" id="loginConfirmPasswordCreate"></i>
                    </div>
                </div>

                <button type="submit" class="login__button">Tạo tài khoản</button>
            </form>

            <p class="login__switch">
                Đã có tài khoản?
                <a asp-action="Login" asp-controller="Account">
                    <button id="loginButtonAccess">Đăng nhập</button>
                </a>
            </p>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
<script src="~/features/auth/login/Login.js"></script>
