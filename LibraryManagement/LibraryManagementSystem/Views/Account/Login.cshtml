@model LibraryManagementSystem.Models.AuthenticationModels.LoginViewModel

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.css">
<link href="~/features/auth/login/Login.css" rel="stylesheet" />

<!--=============== LOGIN IMAGE ===============-->
