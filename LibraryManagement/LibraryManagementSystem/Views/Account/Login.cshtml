<!--=============== LOGIN ===============-->
<div class="login container grid" id="loginAccessRegister">
    <!--===== LOGIN ACCESS =====-->
    <div class="login__access">
        <h1 class="login__title">Đăng nhập vào tài khoản của bạn.</h1>

        <div class="login__area">
            <form asp-action="Login" asp-controller="Account" method="post" class="login__form">
                <div class="login__content grid">
                    <div class="login__box">
                        <input type="email" asp-for="UsernameOrEmail" id="email" required placeholder=" " class="login__input">
                        <label asp-for="UsernameOrEmail" class="login__label">Email</label>

                        <i class="ri-mail-fill login__icon"></i>
                    </div>

                    <div class="login__box">
                        <input type="password" asp-for="Password" id="password" required placeholder=" " class="login__input">
                        <label asp-for="Password" class="login__label">Password</label>

                        <i class="ri-eye-off-fill login__icon login__password" id="loginPassword"></i>
                    </div>
                </div>
                <div>
                    <div>
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword" asp-controller="Account" class="login__forgot">Quên mật khẩu?</a>
                    </div>
                </div>

                <button type="submit" class="login__button">Đăng nhập</button>
            </form>

            <p class="login__switch">
                Chưa có tài khoản?
                <a asp-action="Register" asp-controller="Account">
                <button id="loginButtonRegister">Tạo tài khoản</button>
                </a>
            </p>
        </div>
    </div>

    
</div>

<partial name="_ValidationScriptsPartial" />
<script src="~/features/auth/login/Login.js"></script>
