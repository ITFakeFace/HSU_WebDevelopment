@model IEnumerable<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/features/Book/Index/book.css" />
<h1> Welcome to Library</h1>
<div class="book-list">
    <div>
        <a asp-action="UploadImage" asp-controller="AdminBook">UploadImage</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên sách</th>
                    <th>Tác giả</th>
                    <th>Năm phát hành</th>
                    <th>Trạng thái</th>
                    <th>Actions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            @{
                                var isFirstAuth = true;

                                foreach (var auth in item.Authors)
                                {
                                    @if (!isFirstAuth)
                                    {
                                        <a>, @auth.Name</a>
                                    }
                                    else
                                    {
                                        <a>@auth.Name</a>
                                        isFirstAuth = !isFirstAuth;
                                    }
                                }
                            }
                        </td>
                        <td><span>Publish year</span> @item.PublishYear</td>
                        <td>
                            @if (item.Status == 1)
                            {
                                <a asp-action="Deactive" asp-controller="AdminBook" asp-route-id="@item.Id" class="btn btn-success">Hiện</a>
                            }
                            else
                            {
                                <a asp-action="Deactive" asp-controller="AdminBook" asp-route-id="@item.Id" class="btn btn-danger">Ẩn</a>
                            }
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                <div>
                                    Detail
                                </div>
                            </a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                <div>
                                    Update
                                </div>
                            </a>

                        </td>
                        <td>
                            @{
                                var isExist = false;
                                foreach (var bookLoan in item.BookLoans)
                                {
                                    if (bookLoan.BookNavigation.Id == item.Id)
                                    {
                                        isExist = true;
                                    }
                                }

                                if (!isExist)
                                {
                                    <div id="delete-container-@item.Id">
                                        <button class="btn btn-danger"
                                                onclick="showConfirmButtons(@item.Id)">
                                            Delete
                                        </button>
                                    </div>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script>
            function showConfirmButtons(itemId) {
            const deleteContainer = document.getElementById(`delete-container-${itemId}`);

            // Replace the Delete button with Confirm and Cancel buttons
            deleteContainer.innerHTML = `
                <a
                    class="btn btn-success"
                    onclick="confirmDelete(${itemId})">
                    Confirm
                </a>
                <a
                    class="btn btn-secondary"
                    onclick="cancelDelete(${itemId})">
                    Cancel
                </a>
            `;
        }

        function confirmDelete(itemId) {
            // Redirect to delete action with the item ID
            window.location.href = `/AdminBook/Delete?id=${itemId}`;
        }

        function cancelDelete(itemId) {
            const deleteContainer = document.getElementById(`delete-container-${itemId}`);

            // Restore the original Delete button
            deleteContainer.innerHTML = `
                <a
                    class="btn btn-danger"
                    onclick="showConfirmButtons(${itemId})">
                    Delete
                </a>
            `;
        }
    </script>
</div>


