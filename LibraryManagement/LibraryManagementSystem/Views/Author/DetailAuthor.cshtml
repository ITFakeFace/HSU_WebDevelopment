@model LibraryManagementSystem.Models.Author

@{
    ViewData["Title"] = "DetailAuthor";
    var countryNames = new Dictionary<string, string>
    {
        { "00", "Không rõ" },
        { "VN", "Việt Nam" },
        { "EN", "Anh" },
        { "US", "Hoa Kỳ" },
        { "FR", "Pháp" },
        { "JP", "Nhật Bản" },
        { "KR", "Hàn Quốc" },
        { "CN", "Trung Quốc" },
        { "DE", "Đức" },
        { "AU", "Úc" },
        { "IT", "Ý" },
        { "ES", "Tây Ban Nha" },
        { "CA", "Canada" },
        { "IN", "Ấn Độ" },
        { "BR", "Brazil" }
    };
}
<link rel="stylesheet" href="~/features/author/list/author.css" />

<div class="container">
    <br />
    <h3>Thông tin tác giả @Html.DisplayFor(modelItem => modelItem.Name)</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Gender == 1)
                {
                    <span>Nam</span>
                }
                else if (Model.Gender == 0)
                {
                    <span>Nữ</span>
                }
                else
                {
                    <span>Không tiết lộ</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nation)
            </dt>
            <dd class="col-sm-10">
                @if (countryNames.ContainsKey(Model.Nation))
                {
                    <span>@countryNames[Model.Nation]</span>
                }
                else
                {
                    <span>Unknown</span>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Status == 1)
                {
                    <span>Đang hoạt động</span>
                }
                else if (Model.Status == 0)
                {
                    <span>Ngừng hoạt động</span>
                }
                else
                {
                    <span>Không rõ</span>
                }
            </dd>
        </dl>
        <dt>
            Sách của nhà cung cấp:
        </dt>
        <dd>
            <ul style="padding-left: 0;">
                @foreach (var book in Model.Books)
                {
                    <li style="list-style-type: none; padding-left: 20px;">- &nbsp;<a href="@Url.Action("Detail", "Book", new { id = book.Id })" class="custom-link">@book.Name</a></li>
                }
            </ul>
        </dd>
        <br />
        <div>
            <hr />
            <a class="btn-primary btn" style="font-size: 14px; padding: 10px 20px;" href="javascript:history.back()">Quay lại trang trước</a> &nbsp;&nbsp;&nbsp;&nbsp;
            <a asp-action="Index" class="btn btn-primary" style="font-size: 14px; padding: 10px 20px;">Quay về trang chủ</a>
        </div>
    </div>
</div>
