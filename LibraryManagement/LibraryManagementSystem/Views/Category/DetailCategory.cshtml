@model LibraryManagementSystem.Models.Category

@{
    ViewData["Title"] = "DetailCategory";
}
<link rel="stylesheet" href="~/features/Category/list/Category.css" />

<div class="container"><br />
<h3>Thông tin nhà cung cấp @Html.DisplayFor(modelItem => modelItem.Name)</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == 1)
            {
                <span>Đang hoạt động</span>
            }
            else if (Model.Status == 0)
            {
                <span>Ngừng hoạt động</span>
            }
            else
            {
                <span>Không rõ</span>
            }
        </dd>
        <dt>
            Sách của nhà cung cấp:
        </dt>
        <dd>
                <ul style="padding-left: 0;">
                    @foreach (var book in Model.Books)
                    {
                        <li style="list-style-type: none; padding-left: 20px;">- &nbsp;<a href="@Url.Action("Detail", "Book", new { id = book.Id })" class="custom-link">@book.Name</a></li>
                    }
                </ul>
        </dd>
    </dl>
    <div>
        <hr />
        <a class="btn-primary btn" style="font-size: 14px; padding: 10px 20px;" href="javascript:history.back()">Quay lại trang trước</a> &nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-primary" style="font-size: 14px; padding: 10px 20px;">Quay về trang chủ</a>
    </div>
</div>
</div>
