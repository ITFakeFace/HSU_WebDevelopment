@model LibraryManagementSystem.Models.Age

@{
    ViewData["Title"] = "CreateAuthor";
}
<link rel="stylesheet" href="~/features/SeriesAge/list/Age.css" />

<div class="container"><br />
<h1>Thêm độ tuổi cho sách mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FromAge" class="control-label"></label>
                <input asp-for="FromAge" type="number" class="form-control" min="1" max="122"/>
                <span asp-validation-for="FromAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToAge" class="control-label"></label>
                <input asp-for="ToAge" type="number" class="form-control" min="2" max="122"/>
                <span asp-validation-for="ToAge" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-success" style="font-size: 14px; padding: 10px 20px;" />
            </div>
        </form>
    </div>
</div>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<hr />
<div>
    <a asp-action="Index" class="btn btn-primary" style="font-size: 14px; padding: 10px 20px;">Quay về trang chủ</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
