@model LibraryManagementSystem.Models.Age

@{
    ViewData["Title"] = "DeleteAuthor";
}
<link rel="stylesheet" href="~/features/SeriesAge/list/Age.css" />

<div class="container"><br />
    <h3>Bạn có chắc muốn xóa độ tuỏi từ @Html.DisplayFor(modelItem => modelItem.FromAge) đến @Html.DisplayFor(modelItem => modelItem.ToAge)</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FromAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FromAge)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ToAge)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ToAge)
        </dd>
    </dl>
    @if (ViewBag.ErrorMessage != null)
{
            <!-- Thông báo  -->
            <div class="tab-content" id="errorTabContent">
                <div class="tab-pane fade show active" id="errorContent" role="tabpanel" aria-labelledby="error-tab">
                    <div class="alert alert-danger mt-3">
                        @ViewBag.ErrorMessage
                        @if (Model.Books != null && Model.Books.Any())
                        {
                            <ul style="padding-left: 0;">
                                @foreach (var book in Model.Books)
                                {
                                    <li style="list-style-type: none; padding-left: 20px;">- &nbsp;<a href="@Url.Action("Detail", "Book", new { id = book.Id })" class="custom-link">@book.Name</a></li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
}
    <br />
        @if (!(Model.Books != null && Model.Books.Any()))
        {
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Xác nhận" class="btn btn-danger" style="font-size: 14px; padding: 10px 20px;" />
            </form>
        }
    <div>
        <hr />
        <a class="btn-primary btn" style="font-size: 14px; padding: 10px 20px;" href="javascript:history.back()">Quay lại trang trước</a> &nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-action="Index" class="btn btn-primary" style="font-size: 14px; padding: 10px 20px;">Quay về trang chủ</a>
    </div>
</div>
</div>
